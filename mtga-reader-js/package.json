{
  "name": "mtga-reader",
  "version": "0.1.0",
  "description": "Node.js bindings for reading Magic: The Gathering Arena memory (cross-platform)",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "mtga-reader",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "scripts": {
    "build": "cargo build --release --lib --features napi-bindings --manifest-path ../Cargo.toml && node scripts/copy-native.js",
    "build:debug": "cargo build --lib --features napi-bindings --manifest-path ../Cargo.toml && node scripts/copy-native.js debug",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mtga",
    "magic",
    "arena",
    "memory",
    "reader",
    "napi"
  ],
  "author": "Manuel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mtga-reader/mtga-reader"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ]
}
